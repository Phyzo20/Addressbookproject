pipeline {
    agent any
    tools {
    maven 'mymaven'
    }
    stages {
        stage('Scan and build') {
            steps {
            withSonarQubeEnv(installationName: 'mysonarqube', credentialsId: 'sonarqube-jen'){
              sh 'mvn clean package sonar:sonar'
              }
            }
        }
        stage('deploy') {
            steps {
                sshagent(['techportsjen']) {
    //scp <src_dir> user@tomcatIP:/tomcat/webapps
    sh "scp -o StrictHostKeyChecking=no target/*.war techports@34.204.53.110:/home/techports/tomcat/webapps"
}
            }
        }
        
    }
}
